<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.samsung.os.MoneyBook">


    
    <CalendarView
        android:id="@+id/calendar"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_weight="1"
        android:minDate="01/01/2016"
        android:maxDate="12/31/2018"
        android:focusedMonthDateColor="#ff0000"
        android:unfocusedMonthDateColor="#0000ff"
        android:selectedWeekBackgroundColor="#ff0000"
        android:showWeekNumber="false"
        android:weekSeparatorLineColor="#00ff00"
        />
</LinearLayout>
